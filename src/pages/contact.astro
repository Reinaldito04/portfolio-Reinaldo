---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">

<Navbar/>
    <div class="container-contact" transition:animate="slide">
        <h3>Contacto</h3>

        <form action="" method="POST">
            <div class="container-form">
                <div class="form-group">
                    <label for="txtNombre">Nombre:</label>
                    <input type="text" id="txtNombre" name="nombre">
                </div>
        
                <div class="form-group">
                    <label for="txtEmail">Email:</label>
                    <input type="email" id="txtEmail" name="email">
                </div>
        
                <div class="form-group">
                    <label for="txtMensaje">Mensaje:</label>
                    <textarea id="txtMensaje" name="mensaje" cols="30" rows="10"></textarea>
                </div>
        
                <div class="form-group">
                    <input type="submit" value="Enviar">
                </div>
            </div>
        </form>
    </div>



</Layout>    

<style>
    .container-form {
    max-width: 50%;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
}

/* Estilo para los elementos del formulario */
.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    color: black;
    font-weight: bold;
    margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
textarea {
    width: 90%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
}

/* Estilo para el botón de envío */
input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
}

input[type="submit"]:hover {
    background-color: #0056b3;
}

    h3{
        text-align: center;
        font-size: 1.5rem;
    }
    .container-contact {
    color: rgb(250, 240, 230);
    margin-top: 8%;

    margin-left: 30%;
  }
</style>